@model WebConsumoAPI.Models.ClienteModel

@{
    ViewData["Title"] = "Details";

}

<h1>Detalhes</h1>

<div>
    <h4>Cliente: @Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logotipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Logotipo)
        </dd>
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">Enderecos cadastrados:</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Logradouros)
            {
                <tr>
                    <td>@item.Endereco</td>
                </tr>
            }
            </tbody>
        </table>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
